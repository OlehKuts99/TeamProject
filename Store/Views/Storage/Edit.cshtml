@using Microsoft.AspNetCore.Identity
@model Store.ViewModels.EditSorageView
@{
    ViewBag.Title = "Edit storage";
}

<form asp-action="Edit" asp-controller="Storage">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group">
        <label asp-for="City" class="control-label">City</label>
        <input type="text" asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Street" class="control-label">Street</label>
        <input type="text" asp-for="Street" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" style="margin: 2% 35%; width: 30%;" />
    </div>
</form>
@model Store.ViewModels.CreateStorageView
@{
    ViewBag.Title = "New Storage";
}

<form asp-action="Create" asp-controller="Storage">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="City" class="control-label">City</label>
        <input type="text" asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Street" class="control-label">Street</label>
        <input type="text" asp-for="Street" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-success" style="margin: 2% 35%; width: 30%;" />
    </div>
</form>
@model IEnumerable<Store.Models.Customer>
@{
    ViewBag.Title = "Customers list";
}

<a class="btn btn-sm btn-primary" style="margin: 2% 0%;" asp-action="Create">Add new customer</a>


<table class="table table-hover">
    <tr>
        <th>First Name</th>
        <th>Second Name</th>
        <th>Phone</th>
        <th>Email</th>
        <th></th>
    </tr>
    @foreach (var customer in Model)
    {
        <tr>
            <td>@customer.FirstName</td>
            <td>@customer.SecondName</td>
            <td>@customer.Phone</td>
            <td>@customer.Email</td>
            <td>
                <form asp-action="Delete" asp-route-id="@customer.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@customer.Id">Edit</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
@model Store.ViewModels.ChangePasswordView
@{
    ViewBag.Title = "Forgot password";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="ForgotPassword" asp-controller="Account" style="margin-top: 5%;">
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input type="text" asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Send code" class="btn btn-primary" style="margin: 2% 35%; width: 30%;" />
            </div>
        </form>
    </div>
</div>
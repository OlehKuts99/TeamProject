@model Store.ViewModels.LoginView

@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/css/Login.css" />

<div id="login-div">
    <h2>Login</h2>

    <form method="post" asp-controller="Account" asp-action="Login">
        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <span asp-validation-for="Email"></span>
            <input asp-for="Email" placeholder="Email" >
            <span asp-validation-for="Password"></span>
            <input asp-for="Password" placeholder="Password">
        </div>
        <div>
            <span asp-validation-for="RememberMe"></span>
            <input asp-for="RememberMe" type ="checkbox" class=" half left">
            <label class="half left">Remember me</label>
        </div>
     
        <div>
            <input id="button1" type="submit" value="Log in" />
        </div>
        <p>Are you not registered ? : <a asp-action="Register" asp-controller="Account">Sign In</a></p>
    </form>
</div>


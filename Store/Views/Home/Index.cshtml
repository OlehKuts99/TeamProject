@model Store.ViewModels.FindRangeInMainView
@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/mainPage.css" />
<link rel="stylesheet" href="~/css/Scrollbar.css" />

<div class="container content">
    <div class="row justify-content-md-center">
        <div class="col-lg-2">
            <div class="card example-1 scrollbar-ripe-malinka">
                <div class="card-body">
                    <p class="product-title">
                        <a asp-area="" asp-controller="Home" asp-action="Index">ALL</a>
                    </p>
                    @foreach (var type in Model.Types)
                    {
                        @if (type == "All")
                        {
                            continue;
                        }

                        <p class="product-title">
                            <a asp-area="" asp-controller="Home" asp-action="TypeSearch" asp-route-goodType="@type">@type</a>
                        </p>
                    }
                </div>
            </div>
            <div class="card-body">
                <form asp-action="Filter" asp-controller="Home">
                    <div class="form-group">
                        <label asp-for="GoodView.ProducerName" class="control-label">Producer name</label>
                        <input type="text" asp-for="GoodView.ProducerName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Types">Producer</label>
                        <select class="form-control" name="typeSelect">
                            @foreach (var type in Model.Types)
                            {
                                <option>@type</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="GoodView.YearOfManufacture" class="control-label">Year of manufacture</label>
                        <input type="number" asp-for="GoodView.YearOfManufacture" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="GoodView.StartPrice" class="control-label">Price</label>
                        <input type="number" asp-for="GoodView.StartPrice" placeholder="From" class="form-control" />
                        <input type="number" asp-for="GoodView.EndPrice" placeholder="To" class="form-control" style="margin-top: 1%;" />
                    </div>
                    <div class="form-group">
                        <label asp-for="GoodView.WarrantyTerm" class="control-label">WarrantyTerm</label>
                        <input type="number" asp-for="GoodView.WarrantyTerm" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Filter" class="btn btn-primary" style="margin: 2% 32%; width: 35%;" />
                    </div>
                </form>
            </div>
        </div>
        <div class="col-lg-10 mr-auto products">
            <div class="row">
                @foreach (var good in Model.List)
                {
                    <div class="col-sm-4">
                        <a asp-area="" asp-controller="Home" asp-action="GoodPage" asp-route-goodId="@good.Id">
                            <div class="product">
                                <div class="product-img">
                                    <img src="../images/goods/@good.PhotoUrl" alt="">
                                </div>
                                <p class="product-title">
                                    <div>@good.Name</div>
                                </p>
                                <p class="product-desc">@good.Specification</p>
                                <p class="product-price">Price: @good.Price</p>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

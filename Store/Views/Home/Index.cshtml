@model IEnumerable<Store.Models.Good>
@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/mainPage.css" />
<link rel="stylesheet" href="~/css/Scrollbar.css" />

<div class="container content">
    <div class="row justify-content-md-center">
        <div class="col-lg-2">
            <div class="card example-1 scrollbar-ripe-malinka">
                <div class="card-body">
                    <p class="product-title">
                        <a asp-area="" asp-controller="Home" asp-action="Index">ALL</a>
                    </p>
                    <p class="product-title">
                        <a asp-area="" asp-controller="Home" asp-action="NameSearch" asp-route-goodType="Notebook">Notebook</a>
                    </p>
                    <p class="product-title">
                        <a asp-area="" asp-controller="Home" asp-action="NameSearch" asp-route-goodType="PC">PC</a>
                    </p>
                    <p class="product-title">
                        <a asp-area="" asp-controller="Home" asp-action="NameSearch" asp-route-goodType="Laptop">Laptop</a>
                    </p>
                    <p class="product-title">
                        <a asp-area="" asp-controller="Home" asp-action="NameSearch" asp-route-goodType="Phone">Phone</a>
                    </p>
                </div>
            </div>
        </div>
        <div class="col-lg-10 mr-auto products">
            <div class="row">
                @foreach (var good in Model)
                {
                    <div class="col-sm-4">
                        <div class="product">
                            <div class="product-img">
                                <a href="#"><img src="../images/goods/@good.PhotoUrl" alt=""></a>
                            </div>
                            <p class="product-title">
                                <a href="#">@good.Name</a>
                            </p>
                            <p class="product-desc">@good.Specification</p>
                            <p class="product-price">Price: @good.Price</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

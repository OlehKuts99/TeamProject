@using Microsoft.AspNetCore.Identity
@model Store.Models.Customer
@{
    ViewData["Title"] = "CustomerSettingPage";
}
<h2>CustomerSettingPage</h2>


<form asp-action="CustomerSettingPage" asp-controller="Home">
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group">
        <label asp-for="FirstName" class="control-label">FirstName</label>
        <input type="text" asp-for="FirstName"  class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="SecondName" class="control-label">SecondName</label>
        <input type="text" asp-for="SecondName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Phone" class="control-label">Phone</label>
        <input type="number" asp-for="Phone" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" style="margin: 2% 35%; width: 30%;" />
    </div>

       
</form>
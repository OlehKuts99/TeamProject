@model IEnumerable<Store.Models.Order>
@{
    ViewBag.Title = "Order list";
}

<a class="btn btn-sm btn-primary" style="margin: 2% 0%;" asp-action="Find">Find order</a>

<table class="table table-hover">
    <tr>
        <th>Id</th>
        <th>Date of order</th>
        <th>Customer Name</th>
        <th>Status</th>
        <th></th>
    </tr>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.Id</td>
            <td>@order.OrderDate</td>
            <td>@order.Customer.FirstName @order.Customer.SecondName</td>
            <td>@order.OrderStatus</td>
        </tr>
    }
</table>


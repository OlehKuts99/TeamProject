@model IEnumerable<Store.Models.Order>
@{
    ViewBag.Title = "Find result";
}


<div class="input-group">
    <h2 class="">Founded @Model.Count() records : </h2>
    <span class="input-group-btn">
        <a class="btn btn-sm btn-primary" asp-action="Index" style="float: right;">Back to Orders</a>
    </span>
</div>

<table class="table table-hover">
    <tr>
        <th>Id</th>
        <th>List of products</th>
        <th>Date of order</th>
        <th>Customer Name</th>
        <th></th>
    </tr>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.Id</td>
            <td>
                <table>
                    <tr>
                        @foreach (var product in order.Products)
                        {
                            <td>
                                product.Good.Name
                            </td>
                        }
                    </tr>
                </table>
            </td>
            <td>@order.OrderDate</td>
            <td>@order.Customer.FirstName @order.Customer.SecondName</td>

        </tr>
    }
</table>
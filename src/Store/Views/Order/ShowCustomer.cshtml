@model DAL.Models.Customer
@{
    ViewBag.Title = "Order's customer";
}

<div class="input-group">
    <h2 class="">Customer of @ViewBag.OrderId order : </h2>
    <span class="input-group-btn">
        <a class="btn btn-sm btn-primary" asp-controller="Order" asp-action="Index" style="float: right;">Back</a>
    </span>
</div>

<table class="table table-hover">
    <tr>
        <th>First Name</th>
        <th>Second Name</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Orders</th>
        <th></th>
    </tr>
    <tr>
        <td>@Model.FirstName</td>
        <td>@Model.SecondName</td>
        <td>@Model.Phone</td>
        <td>@Model.Email</td>
        <td><a asp-action="ShowOrders" asp-controller="Customer" asp-route-id="@Model.Id">Orders</a></td>
        <td>
            <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                <button type="submit" class="btn btn-sm btn-danger">
                    Delete
                </button>
            </form>
        </td>
    </tr>
</table>
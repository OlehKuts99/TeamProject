@model IEnumerable<DAL.Models.Order>
@{
    ViewBag.Title = "Find result";
}


<div class="input-group">
    <h2 class="">Founded @Model.Count() records : </h2>
    <span class="input-group-btn">
        <a class="btn btn-sm btn-primary" asp-action="Index" style="float: right;">Back to Orders</a>
    </span>
</div>

<table class="table table-hover">
    <tr>
        <th>Id</th>
        <th>Date of order</th>
        <th>Goods</th>
        <th>Customer</th>
        <th>City</th>
        <th>Street</th>
        <th>Status</th>
        <th></th>
    </tr>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.Id</td>
            <td>@order.OrderDate</td>
            <td><a asp-action="ShowCustomer" asp-route-id="@order.Id">Customer</a></td>
            <td><a asp-action="ShowGoods" asp-route-id="@order.Id">Goods</a></td>
            <td>@order.EndPointCity</td>
            <td>@order.EndPointStreet</td>
            <td>@order.OrderStatus</td>
        </tr>
    }
</table>
@model IEnumerable<DAL.Models.Good>
@{
    ViewBag.Title = "Product list";
}

<div class="input-group">
    <h2 class="">Products from @ViewBag.ProducerName : </h2>
    <span class="input-group-btn">
        <a class="btn btn-sm btn-primary" asp-controller="Producer" asp-action="Index" style="float: right;">Back</a>
    </span>
</div>

<table class="table table-hover">
    <tr>
        <th>Name</th>
        <th>Year of goods production</th>
        <th>The warranty period</th>
        <th>Producer name</th>
        <th>Price</th>
        <th>Type</th>
        <th>Amount</th>
        <th></th>
    </tr>
    @foreach (var good in Model)
    {
        <tr>
            <td>@good.Name</td>
            <td>@good.YearOfManufacture</td>
            <td>@good.WarrantyTerm months</td>
            <td>@good.Producer.Name</td>
            <td>@good.Price</td>
            <td>@good.Type</td>
            <td>@good.Count</td>
            <td>
                <form asp-action="Delete" asp-route-id="@good.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-controller="Good" asp-route-id="@good.Id">Edit</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
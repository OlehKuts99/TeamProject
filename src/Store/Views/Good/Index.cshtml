@model IEnumerable<DAL.Models.Good>
@{
    ViewBag.Title = "Goods list";
}

<a class="btn btn-sm btn-primary" style="margin: 2% 0%;" asp-action="Create">Add new good</a>
<a class="btn btn-sm btn-primary" style="margin: 2% 0%;" asp-action="Find">Find good</a>

<table class="table table-hover">
    <tr>
        <th>Name</th>
        <th>Year of goods production</th>
        <th>The warranty period</th>
        <th>Producer name</th>
        <th>Price</th>
        <th>Type</th>
        <th>Amount</th>
        <th></th>
    </tr>
    @foreach (var good in Model)
    {
        <tr>
            <td>@good.Name</td>
            <td>@good.YearOfManufacture</td>
            <td>@good.WarrantyTerm months</td>
            <td>@good.Producer.Name</td>
            <td>@good.Price</td>
            <td>@good.Type</td>
            <td>@good.Count</td>
            <td>
                <form asp-action="Delete" asp-route-id="@good.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@good.Id">Edit</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
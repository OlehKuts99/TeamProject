@model IEnumerable<DAL.Models.Storage>
@{
    ViewBag.Title = "Storages list";
}

<a class="btn btn-sm btn-primary" style="margin: 2% 0%;" asp-action="Create">Add new storage</a>
<a class="btn btn-sm btn-primary" style="margin: 2% 0%;" asp-action="Find">Find storage</a>

<table class="table table-hover">
    <tr>
        <th>City</th>
        <th>Street</th>
        <th>Goods</th>
        <th></th>
    </tr>
    @foreach (var storage in Model)
    {
        <tr>
            <td>@storage.City</td>
            <td>@storage.Street</td>
            <td><a asp-action="ShowGoods" asp-route-id="@storage.Id">Show Goods</a></td>
            <td>
                <form asp-action="Delete" asp-route-id="@storage.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@storage.Id">Edit</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>